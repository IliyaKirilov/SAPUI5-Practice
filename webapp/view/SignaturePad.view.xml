<mvc:View controllerName="kpmg.home.MasteringUI5.controller.SignaturePad" xmlns:mvc="sap.ui.core.mvc" displayBlock="true" xmlns="sap.m"
	xmlns:core="sap.ui.core" xmlns:html="http://www.w3.org/1999/xhtml">
	<Shell id="shell">
		<Page title="Digital Signature Pad" showNavButton="true" navButtonPress="onNavBack">
			<content>
				<FlexBox alignItems="Center" justifyContent="Center">
					<VBox visible="true">
						<core:HTML id="html"></core:HTML>
					</VBox>
				</FlexBox>
				<FlexBox alignItems="Center" justifyContent="Center">
					<HBox >
						<Button id="Signature" text="Signature" press=".onSign"></Button>
						<Button id="Save" text="Save" press=".onSave"></Button>
						<Button id="clear" text="Clear" press=".onClear"></Button>
					</HBox>
				</FlexBox>
			</content>
		</Page>
	</Shell>
</mvc:View>